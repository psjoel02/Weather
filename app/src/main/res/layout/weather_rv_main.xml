<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#0000"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="0dp">

        <TextView
            android:id="@+id/timeRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="12AM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/tempRV"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imgRV"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="70Â°F"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/tempRV"
            android:src="@drawable/precipitation">

        </ImageView>

        <ImageView
            android:id="@+id/imgRV"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/timeRV"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher">

        </ImageView>

        <TextView
            android:id="@+id/precipRV"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/tempRV"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/windRV"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/precipRV"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="0 mph"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>